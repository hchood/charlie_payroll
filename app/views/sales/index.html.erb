<p class="beautiful">List your sales here </p>

<table>
<tr>
  <th>Amount</th>
  <th>First name</th>
  <th>Last name</th>
  <th>Commission sales person?</th>
  <th>Commission</th>
</tr>

<% @sales.each do |sale| %>
  <%   seller = sale.sales_person %>
  <tr>
    <td><%= "$#{sprintf('%.2f', sale.amount)}" %></td>
    <td><%= seller.first_name %></td>
    <td><%= seller.last_name %></td>
  </tr>
<% end %>



</table>

<% @sales.each do |sale| %>
  <%   seller = sale.sales_person %>
  <%=  string = "$#{sale.amount}, #{seller.first_name} #{seller.last_name}" %>
    <% if seller.is_a?(CommissionSalesPerson) %>
      <%= string += " (Commission Sales Person), Commision: #{sale.amount * seller.commission}" %>
    <% end %>



